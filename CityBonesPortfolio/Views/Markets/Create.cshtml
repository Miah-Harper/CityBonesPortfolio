@model MarketViewModel

@{
    ViewData["Title"] = "Add New Market";
}

<link rel="stylesheet" href="~/css/CreateProduct.css" />

<h2>Add New Market</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="add-product-form">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    

    <div class="form-group">
        <label asp-for="Image">Product Image</label>
        <input asp-for="Image" type="file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit">Add Market</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
