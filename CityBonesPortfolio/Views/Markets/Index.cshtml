@model IEnumerable<CityBonesPortfolio.Models.MarketUserViewModel>

@{
    ViewData["Title"] = "Market List";
}

<h2>Available Markets</h2>



@foreach (var market in Model)
{
    <div class="market-card" style="border: 1px solid #ccc; padding: 15px; margin-bottom: 20px;">
        <h3>@market.Name</h3>
        <p><strong>Location:</strong> @market.Location</p>
        <p>@market.Description</p>

        @if (market.ImageData != null && market.ImageData.Length > 0)
        {
            var base64 = Convert.ToBase64String(market.ImageData);
            var imageSrc = $"data:image/png;base64,{base64}";
            <img src="@imageSrc" alt="Market Image" style="max-width: 300px;" />
        }
        else
        {
            <p><em>No image available</em></p>
        }

      
    </div>
}
