<body style="margin:0;
             min-height:100vh;
             background: url('/img/mushrooms.jpg') no-repeat center center;
             background-size: cover;">

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <!-- Dashboard Card -->
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-body text-center p-5">

                        <h2 class="mb-4">Welcome to the Dashboard!</h2>
                        <p class="text-muted mb-4">
                            Select an option below to manage your data
                        </p>

                        <div class="d-flex justify-content-center flex-wrap gap-3">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Markets" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    Manage Markets
                                </a>
                            }

                            <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg">
                                Manage Products
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

</body>

