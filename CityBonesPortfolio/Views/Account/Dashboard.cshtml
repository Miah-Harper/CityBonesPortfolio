@{
    ViewBag.Title = "User Dashboard";
}

<div class="container mt-4">
    <h2>Welcome, @User.Identity.Name!</h2>

    <div class="row mt-4">
        <!-- Cart Section -->
        <div class="col-md-6">
            <h4>My Cart</h4>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between">
                    Item 1
                    <button class="btn btn-sm btn-danger">Remove</button>
                </li>
                <!-- Repeat for each item -->
            </ul>
        </div>

        <!-- Saved Items -->
        <div class="col-md-6">
            <h4>Saved for Later</h4>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between">
                    Item A
                    <button class="btn btn-sm btn-primary">Move to Cart</button>
                </li>
            </ul>
        </div>
    </div>

    <!-- Checkout Button -->
    <a href="/Checkout/Checkout" class="btn btn-success">Go to Checkout</a>


    <!-- Browse/Add Section (Simplified) -->
    <div class="mt-5">
        <h4>Browse Items</h4>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">New Item</h5>
                        <button class="btn btn-outline-success">Add to Cart</button>
                        <button class="btn btn-outline-secondary">Save</button>
                    </div>
                </div>
            </div>
         
        </div>
    </div>
</div>
