@model Register
@{
    var cartCount = CityBonesPortfolio.Helpers.CartManager.GetCartCount(Context.Session);
    var cartIcon = "🛒";
}
<link rel="stylesheet" href="~/css/register.css" />
<body>

    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
        <div class="container-fluid">


            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="AboutMe" asp-action="Index">About Me</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>
                  
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-link active">
                        <a asp-controller="Cart" asp-action="Index" class="text-white text-decoration-none">
                            @cartIcon View Cart
                            @if (cartCount > 0)
                            {
                                <span class="cart-count">(@cartCount)</span>
                            }
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="page-wrapper">
        <div class="register-container">
            <h2>Register</h2>

            <form asp-action="Register" method="post" class="register-form">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>

                <button type="submit" class="btn-submit">Register</button>
            </form>
        </div>
    </div>
 
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}