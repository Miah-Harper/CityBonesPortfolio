@model Login

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/Login.css" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>

    <!-- 🌐 Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
        <div class="container-fluid">
            

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Markets" asp-action="Index">Markets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AboutMe" asp-action="Index">About Me</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- ✅ Navbar End -->
    <!-- Login Form -->
    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()

        <div class="center-wrapper text-center">

            <!-- Avatar -->
            <div class="imgcontainer mb-3">
                <img src="/img/cityboneslogo.jpeg" alt="Avatar" class="avatar">
            </div>

            <!-- Form Inputs -->
            <div class="container d-flex flex-column align-items-center">

                <label asp-for="Email" class="w-100"><b>Email</b></label>
                <input asp-for="Email" class="form-control custom-input mb-2" placeholder="Enter Email" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Password" class="w-100"><b>Password</b></label>
                <input asp-for="Password" type="password" class="form-control custom-input mb-2" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>

                <button type="submit" class="btn btn-primary w-100 custom-input mt-3">Login</button>

                <label class="mt-2">
                    <input type="checkbox" name="remember" checked /> Remember me
                </label>

                <a asp-action="ForgotPassword" asp-controller="Account" class="btn-link mt-2">Forgot Password?</a>

            </div>
        </div>
    </form>

  


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
