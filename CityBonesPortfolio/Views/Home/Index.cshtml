@model IEnumerable<CityBonesPortfolio.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CityBones | Home</title>
    <link rel="stylesheet" href="~/css/HomePage.css" />
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-logo">
            <img src="~/img/cityboneslogo.jpeg" alt="CityBones Logo" />
        </div>
      
        <ul>
            <li><a asp-controller="AboutMe" asp-action="Index">About Me</a></li>
            <li><a asp-controller="Markets" asp-action="Index">Markets</a></li>
            <li><a asp-controller="Account" asp-action="Login">Login</a></li>
            <li><a asp-controller="Account" asp-action="Register">Register</a></li>
            <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
        </ul>
    </div>

    <div class="main-content">
        <h1 class="page-title"></h1>
        <div class="product-grid">
            @foreach (var product in Model)
            {
                <div class="product-card">
                    <img src="@Url.Action("GetImage", "Product", new { id = product.Id })" alt="@product.Name" />
                    <h3>@product.Name</h3>
                    <p>@product.Description</p>
                    <p class="price">$@product.Price.ToString("0.00")</p>
                </div>
            }
        </div>
    </div>
</body>
</html>
