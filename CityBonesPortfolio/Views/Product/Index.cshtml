@model IEnumerable<Product>

@{
    ViewData["Title"] = "Manage Products";
}
@section Styles {
    <link rel="stylesheet" href="~/css/ProductAdmin.css" />
}


<h2 class="text-center mb-4" style="font-weight: 500;">Manage Products</h2>

<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-dark">+ Add Product</a>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm" style="border-radius: 12px;">
                    <img src="@Url.Action("GetImage", "Product", new { id = product.Id })"
                         class="card-img-top"
                         alt="@product.Name"
                         style="object-fit: cover; height: 200px; border-radius: 12px 12px 0 0;" />

                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 1.1rem; font-weight: 600;">@product.Name</h5>
                        <p class="card-text text-muted" style="font-size: 0.9rem;">@product.Description</p>
                        <p class="card-text fw-semibold">$@product.Price</p>
                    </div>

                    <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@product.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Delete this product?');">
                            <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>